<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping 
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>

    <class name="com.example.model.Flight" table="app_flight">
        <id name="flightid" column="flight_id" type="java.lang.Long" unsaved-value="0">
            <generator class="increment"/>
        </id>
        <property name="flightname" column="flight_name" type="java.lang.String"/>
        <property name="from" column="from" type="java.lang.String"/>
        <property name="to" column="to" type="java.lang.String"/>
        <property name="bookings" column="bookings" type="java.lang.Integer"/>
        <property name="totalSeats" column="total_Seats" type="java.lang.Integer"/>
        <property name="flightdate" column="flight_date" type="java.util.Date"/>
    </class>
</hibernate-mapping>


